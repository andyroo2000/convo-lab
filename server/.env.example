# Server Configuration
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
# For local development, use your Mac username (e.g., andrewlandry) instead of Docker credentials
# Example: DATABASE_URL="postgresql://andrewlandry@localhost:5432/languageflow?schema=public"
DATABASE_URL="postgresql://username:password@localhost:5432/languageflow?schema=public"

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
COOKIE_SECRET=your-cookie-secret-here-change-in-production

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcloud-key.json
GEMINI_API_KEY=your-gemini-api-key

# Google Cloud Storage
GCS_BUCKET_NAME=languageflow-storage

# Google Cloud Text-to-Speech
# Japanese voices (Neural2)
TTS_VOICE_JA_FEMALE=ja-JP-Neural2-B
TTS_VOICE_JA_MALE=ja-JP-Neural2-C

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_AUDIO_GENERATION=true

# Stripe Configuration (for subscription payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_price_id_here
STRIPE_PRICE_TEST_MONTHLY=price_your_test_monthly_price_id_here

# Google OAuth (for social login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Email Configuration (using AWS SES or Resend)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com
RESEND_API_KEY=re_your_resend_api_key_here

# AWS SES (alternative to Resend)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Fish Audio TTS
FISH_AUDIO_API_KEY=your-fish-audio-api-key

# Audio Sweetening Chain (all optional, defaults work out of the box)
# Set to 0 to disable all sweetening
# AUDIO_SWEETENING_ENABLED=1
# Set to 0 to disable per-segment loudness normalization
# AUDIO_LOUDNORM_ENABLED=1
# AUDIO_LOUDNORM_TARGET_IL=-16
# AUDIO_LOUDNORM_TARGET_LRA=11
# AUDIO_LOUDNORM_TARGET_TP=-1.5
# AUDIO_COMP_THRESHOLD_DB=-20
# AUDIO_COMP_RATIO=2
# AUDIO_COMP_ATTACK_MS=20
# AUDIO_COMP_RELEASE_MS=250
# AUDIO_COMP_MAKEUP_DB=2
# AUDIO_HIGHPASS_FREQ_HZ=80
# AUDIO_PRESENCE_FREQ_HZ=3000
# AUDIO_PRESENCE_GAIN_DB=2
# AUDIO_PRESENCE_Q=1.0

# External Services
FURIGANA_SERVICE_URL=http://localhost:8080
PINYIN_SERVICE_URL=http://localhost:8081

# Admin Users (comma-separated email addresses)
ADMIN_EMAILS=admin@yourdomain.com,superadmin@yourdomain.com

# Client URL (for CORS and redirects)
CLIENT_URL=http://localhost:5173

# BullMQ Worker Configuration
WORKER_DRAIN_DELAY=30000
WORKER_EXECUTION_REGION=us-central1
WORKER_JOB_NAME=course-worker

# Test User Credentials (for development/testing only)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
