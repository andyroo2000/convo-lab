      "exampleTranslation": "depending on the person"
    },
    {
      "pattern": "～について",
      "meaning": "about / concerning",
      "usage": "Noun + について",
      "example": "日本について",
      "exampleTranslation": "about Japan"
    },
    {
      "pattern": "～に対して",
      "meaning": "towards / in contrast to",
      "usage": "Noun + に対して",
      "example": "子供に対して",
      "exampleTranslation": "towards children"
    },
    {
      "pattern": "～とともに",
      "meaning": "together with / as",
      "usage": "Noun + とともに",
      "example": "時間とともに",
      "exampleTranslation": "as time passes"
    },
    {
      "pattern": "～ことにする",
