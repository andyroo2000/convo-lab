  "grammarPoints": [
    {
      "pattern": "～ば",
      "meaning": "if / when (conditional)",
      "usage": "Verb ば-form",
      "example": "行けば",
      "exampleTranslation": "if you go"
    },
    {
      "pattern": "～たら",
      "meaning": "if / when (past conditional)",
      "usage": "Verb た-form + ら",
      "example": "行ったら",
      "exampleTranslation": "if/when you go"
    },
    {
      "pattern": "～なら",
      "meaning": "if it's the case that",
      "usage": "Noun / plain form + なら",
      "example": "日本なら",
      "exampleTranslation": "if it's Japan"
    },
    {
      "pattern": "～ても",
      "meaning": "even if / even though",
      "usage": "Verb て-form + も",
      "example": "雨が降っても",
      "exampleTranslation": "even if it rains"
    },
    {
      "pattern": "～のに",
      "meaning": "although / despite",
      "usage": "Plain form + のに",
      "example": "勉強したのに",
      "exampleTranslation": "although I studied"
    },
    {
      "pattern": "～ばかり",
      "meaning": "just / only / nothing but",
      "usage": "Verb dictionary form / noun + ばかり",
      "example": "遊んでばかりいる",
      "exampleTranslation": "do nothing but play"
    },
    {
      "pattern": "～によって",
