  "grammarPoints": [
    {
      "pattern": "～ことができる",
      "meaning": "can do / be able to",
      "usage": "Verb dictionary form + ことができる",
      "example": "泳ぐことができます",
      "exampleTranslation": "can swim"
    },
    {
      "pattern": "～た方がいい",
      "meaning": "had better / should",
      "usage": "Verb た-form + 方がいい",
      "example": "休んだ方がいい",
      "exampleTranslation": "you should rest"
    },
    {
      "pattern": "～ない方がいい",
      "meaning": "had better not / shouldn't",
      "usage": "Verb ない-form + 方がいい",
      "example": "行かない方がいい",
      "exampleTranslation": "you shouldn't go"
    },
    {
      "pattern": "～なくてもいい",
      "meaning": "don't have to / it's okay not to",
      "usage": "Verb ない-form (ない → なくて) + もいい",
      "example": "行かなくてもいい",
      "exampleTranslation": "you don't have to go"
    },
    {
      "pattern": "～なければならない",
      "meaning": "must / have to",
      "usage": "Verb ない-form (ない → なければ) + ならない",
      "example": "勉強しなければならない",
      "exampleTranslation": "must study"
    },
    {
      "pattern": "～てもいい",
      "meaning": "may / it's okay to",
      "usage": "Verb て-form + もいい",
      "example": "食べてもいい",
      "exampleTranslation": "may eat"
    },
    {
      "pattern": "～てはいけない",
      "meaning": "must not / may not",
      "usage": "Verb て-form + はいけない",
      "example": "入ってはいけない",
      "exampleTranslation": "must not enter"
    },
    {
      "pattern": "～た後で",
      "meaning": "after doing",
      "usage": "Verb た-form + 後で",
      "example": "食べた後で",
      "exampleTranslation": "after eating"
    },
    {
      "pattern": "～る前に",
      "meaning": "before doing",
      "usage": "Verb dictionary form + 前に",
      "example": "寝る前に",
      "exampleTranslation": "before sleeping"
    },
    {
      "pattern": "～てから",
      "meaning": "after / since",
      "usage": "Verb て-form + から",
      "example": "食べてから",
      "exampleTranslation": "after eating"
    },
    {
      "pattern": "～ながら",
      "meaning": "while doing",
      "usage": "Verb stem + ながら",
      "example": "音楽を聞きながら",
      "exampleTranslation": "while listening to music"
    },
    {
      "pattern": "～やすい",
      "meaning": "easy to do",
      "usage": "Verb stem + やすい",
      "example": "読みやすい",
      "exampleTranslation": "easy to read"
    },
    {
      "pattern": "～にくい",
      "meaning": "hard to do / difficult to",
      "usage": "Verb stem + にくい",
      "example": "読みにくい",
      "exampleTranslation": "hard to read"
    },
    {
      "pattern": "～すぎる",
      "meaning": "too much / over-",
