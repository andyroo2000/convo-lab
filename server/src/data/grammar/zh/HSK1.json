{
  "language": "zh",
  "level": "HSK1",
  "framework": "HSK",
  "grammarPoints": [
    {
      "pattern": "Subject + 是 + Noun",
      "meaning": "to be",
      "usage": "Use '是' (shì) to link subject and noun (identity/definition)",
      "example": "我是学生",
      "exampleTranslation": "I am a student"
    },
    {
      "pattern": "Subject + Verb + Object",
      "meaning": "basic sentence structure",
      "usage": "Standard SVO word order for simple statements",
      "example": "我喝水",
      "exampleTranslation": "I drink water"
    },
    {
      "pattern": "Subject + 不 + Verb",
      "meaning": "negation",
      "usage": "Use '不' (bù) before verbs to negate",
      "example": "我不喝茶",
      "exampleTranslation": "I don't drink tea"
    },
    {
      "pattern": "Verb + 吗?",
      "meaning": "yes/no question",
      "usage": "Add '吗' (ma) at the end to form yes/no questions",
      "example": "你好吗?",
      "exampleTranslation": "Are you well?"
    },
    {
      "pattern": "Subject + 有 + Object",
      "meaning": "to have/possess",
      "usage": "Use '有' (yǒu) to express possession",
      "example": "我有书",
      "exampleTranslation": "I have a book"
    },
    {
      "pattern": "Subject + 没有 + Object",
      "meaning": "to not have",
      "usage": "Use '没有' (méiyǒu) to negate '有'",
      "example": "我没有钱",
      "exampleTranslation": "I don't have money"
    },
    {
      "pattern": "Number + Measure Word + Noun",
      "meaning": "counting objects",
      "usage": "Use measure words between numbers and nouns",
      "example": "三个人",
      "exampleTranslation": "three people"
    },
    {
      "pattern": "Subject + 在 + Place",
      "meaning": "to be at/in",
      "usage": "Use '在' (zài) to indicate location",
      "example": "我在家",
      "exampleTranslation": "I am at home"
    },
    {
      "pattern": "Subject + 叫 + Name",
      "meaning": "to be called/named",
      "usage": "Use '叫' (jiào) to introduce names",
      "example": "我叫王明",
      "exampleTranslation": "I am called Wang Ming"
    },
    {
      "pattern": "什么 in questions",
      "meaning": "what",
      "usage": "Use '什么' (shénme) to ask 'what'",
      "example": "这是什么?",
      "exampleTranslation": "What is this?"
    },
    {
      "pattern": "谁 in questions",
      "meaning": "who",
      "usage": "Use '谁' (shéi/shuí) to ask 'who'",
      "example": "他是谁?",
      "exampleTranslation": "Who is he?"
    },
    {
      "pattern": "哪儿/哪里 in questions",
      "meaning": "where",
      "usage": "Use '哪儿' (nǎr) or '哪里' (nǎlǐ) to ask 'where'",
      "example": "你在哪儿?",
      "exampleTranslation": "Where are you?"
    },
    {
      "pattern": "几 in questions",
      "meaning": "how many (small numbers)",
      "usage": "Use '几' (jǐ) to ask about small quantities",
      "example": "你有几个?",
      "exampleTranslation": "How many do you have?"
    },
    {
      "pattern": "多少 in questions",
      "meaning": "how many/how much",
      "usage": "Use '多少' (duōshao) for larger quantities or prices",
      "example": "多少钱?",
      "exampleTranslation": "How much money?"
    },
    {
      "pattern": "Subject + 想 + Verb",
      "meaning": "to want to/would like to",
      "usage": "Use '想' (xiǎng) before verbs to express desire",
      "example": "我想去",
      "exampleTranslation": "I want to go"
    },
    {
      "pattern": "Subject + 会 + Verb",
      "meaning": "to know how to/can",
      "usage": "Use '会' (huì) to express learned ability",
      "example": "我会说中文",
      "exampleTranslation": "I can speak Chinese"
    },
    {
      "pattern": "Subject + 能 + Verb",
      "meaning": "to be able to/can",
      "usage": "Use '能' (néng) to express ability or permission",
      "example": "我能帮你",
      "exampleTranslation": "I can help you"
    },
    {
      "pattern": "Adjective + 不 + Adjective",
      "meaning": "A-not-A question pattern",
      "usage": "Repeat adjective with '不' in between to form questions",
      "example": "好不好?",
      "exampleTranslation": "Is it good or not?"
    },
    {
      "pattern": "Verb + 不 + Verb",
      "meaning": "V-not-V question pattern",
      "usage": "Repeat verb with '不' in between to form questions",
      "example": "去不去?",
      "exampleTranslation": "Are you going or not?"
    },
    {
      "pattern": "Subject + 很 + Adjective",
      "meaning": "very + adjective",
      "usage": "Use '很' (hěn) before adjectives (often just linking, not intensifying)",
      "example": "我很好",
      "exampleTranslation": "I am fine"
    },
    {
      "pattern": "的 for possession",
      "meaning": "possessive particle",
      "usage": "Use '的' (de) to show possession",
      "example": "我的书",
      "exampleTranslation": "my book"
    },
    {
      "pattern": "Time + Subject + Verb",
      "meaning": "time expression placement",
      "usage": "Time words typically come before the subject or after subject before verb",
      "example": "今天我去",
      "exampleTranslation": "Today I go"
    },
    {
      "pattern": "Subject + 去 + Place",
      "meaning": "to go to",
      "usage": "Use '去' (qù) with places to express going",
      "example": "我去学校",
      "exampleTranslation": "I go to school"
    },
    {
      "pattern": "Subject + 来 + Place",
      "meaning": "to come to",
      "usage": "Use '来' (lái) to express coming",
      "example": "你来我家",
      "exampleTranslation": "You come to my home"
    },
    {
      "pattern": "太...了",
      "meaning": "too... / so...",
      "usage": "Use '太' (tài) + adjective + '了' (le) to express excess",
      "example": "太贵了",
      "exampleTranslation": "It's too expensive"
    },
    {
      "pattern": "Subject + Verb + 了",
      "meaning": "completed action",
      "usage": "Use '了' (le) after verb to indicate completion",
      "example": "我吃了",
      "exampleTranslation": "I ate / I have eaten"
    },
    {
      "pattern": "怎么 in questions",
      "meaning": "how",
      "usage": "Use '怎么' (zěnme) to ask 'how'",
      "example": "怎么去?",
      "exampleTranslation": "How to go?"
    },
    {
      "pattern": "Subject + 喜欢 + Object/Verb",
      "meaning": "to like",
      "usage": "Use '喜欢' (xǐhuan) to express liking",
      "example": "我喜欢猫",
      "exampleTranslation": "I like cats"
    },
    {
      "pattern": "这 / 那 + Measure Word + Noun",
      "meaning": "this/that + noun",
      "usage": "Use demonstratives with measure words before nouns",
      "example": "这个人",
      "exampleTranslation": "this person"
    },
    {
      "pattern": "Subject + 给 + Person + Object",
      "meaning": "to give",
      "usage": "Use '给' (gěi) in giving constructions",
      "example": "我给你书",
      "exampleTranslation": "I give you a book"
    },
    {
      "pattern": "从...到...",
      "meaning": "from...to...",
      "usage": "Use '从' (cóng) and '到' (dào) to express range",
      "example": "从家到学校",
      "exampleTranslation": "from home to school"
    },
    {
      "pattern": "Subject + 要 + Verb",
      "meaning": "to want to/will",
      "usage": "Use '要' (yào) to express desire or future intention",
      "example": "我要学习",
      "exampleTranslation": "I want to study"
    },
    {
      "pattern": "和 to connect nouns",
      "meaning": "and",
      "usage": "Use '和' (hé) to connect nouns (not clauses)",
      "example": "我和你",
      "exampleTranslation": "you and I"
    },
    {
      "pattern": "还是 in questions",
      "meaning": "or (in questions)",
      "usage": "Use '还是' (háishi) for 'or' in questions",
      "example": "茶还是咖啡?",
      "exampleTranslation": "Tea or coffee?"
    },
    {
      "pattern": "Subject + 可以 + Verb",
      "meaning": "may/can",
      "usage": "Use '可以' (kěyǐ) for permission or possibility",
      "example": "我可以进来吗?",
      "exampleTranslation": "May I come in?"
    },
    {
      "pattern": "一点儿 for small amounts",
      "meaning": "a little",
      "usage": "Use '一点儿' (yìdiǎnr) for small quantities",
      "example": "喝一点儿水",
      "exampleTranslation": "drink a little water"
    },
    {
      "pattern": "都 for emphasis",
      "meaning": "all/both",
      "usage": "Use '都' (dōu) before verbs to mean 'all' or for emphasis",
      "example": "我们都是学生",
      "exampleTranslation": "We are all students"
    },
    {
      "pattern": "也 for 'also'",
      "meaning": "also/too",
      "usage": "Use '也' (yě) before verbs to mean 'also'",
      "example": "我也去",
      "exampleTranslation": "I also go"
    },
    {
      "pattern": "正在 + Verb",
      "meaning": "currently doing",
      "usage": "Use '正在' (zhèngzài) to indicate ongoing action",
      "example": "我正在吃饭",
      "exampleTranslation": "I am eating"
    },
    {
      "pattern": "再 for future repetition",
      "meaning": "again (future)",
      "usage": "Use '再' (zài) for actions that will happen again",
      "example": "再见",
      "exampleTranslation": "see you again (goodbye)"
    }
  ]
}
